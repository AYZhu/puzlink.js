{
  "name": "puzlink",
  "version": "0.1.0",
  "private": true,
  "description": "Tool to find patterns among sets of words",
  "license": "UNLICENSED",
  "author": "CJ Quines <cj@cjquines.com>",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build:dev": "esbuild src/browser.ts --bundle --outfile=dist/index.js --external:node:* --platform=browser --format=esm",
    "build:categories": "tsx scripts/buildCategories.ts",
    "build:knownLogProbs": "tsx scripts/buildKnownLogProbs.ts",
    "dev": "http-server . -o example",
    "format": "prettier --write .",
    "lint": "eslint",
    "test": "vitest run",
    "test:evals": "tsx scripts/runEvals.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "puzzles"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjquines/puzlink.js.git"
  },
  "bugs": {
    "url": "https://github.com/cjquines/puzlink.js/issues"
  },
  "homepage": "https://github.com/cjquines/puzlink.js#readme",
  "dependencies": {
    "cromulence": "^0.4.1",
    "simple-statistics": "^7.8.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.0.15",
    "esbuild": "0.27.2",
    "chalk": "^5.6.2",
    "eslint": "^9.39.2",
    "iso-3166": "^4.4.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  }
}
